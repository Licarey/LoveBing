<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ele_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_content_bg"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="content区域"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#882211"
        android:padding="10dp">
        <TextView
            android:id="@+id/location_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="北京市海淀区西二旗"
            android:textColor="#fff"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/tv_search_rlt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/location_tv"
            android:background="#ffff00"
            android:gravity="center"
            android:padding="10dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#535253"
                android:gravity="center"
                android:textSize="13sp"
                android:drawableLeft="#991122"
                android:layout_centerVertical="true"
                android:hint="搜索商家,商品名称"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/bottom"
            android:textColor="#fff"
            android:text="达美乐  呷谱  鲜芋仙  99炸鸡  麦当劳  肉夹馍"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>